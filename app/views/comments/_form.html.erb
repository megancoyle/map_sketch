<div class="form-block">
<% @drawing.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<%= form_for([@drawing, @drawing.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>
