<%= form_for @drawing do |f| %>

<% if @drawing.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @drawing.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.file_field :drawing_image %>
  </p>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <div class="drawing">
      <canvas width="600" height="320" id="cvs" style="background:url('<%= @address_url %>') no-repeat; background-size:cover;"></canvas>

      <div>
          <p>
              <button id="save">save</button> or <button id="convert">convert to</button> as:
              <select id="sel">
                  <option value="png">png</option>
                  <option value="jpeg">jpeg</option>
                  <option value="bmp">bmp</option>
              </select><br/>
              width : <input type="number" value="300" id="imgW" /><br/>
              height : <input type="number" value="200" id="imgH" /><br/>
              <input name="color2" type="hidden" id="color_value" value="66ccff">
              <button class="jscolor {valueElement: 'color_value'}">Pick a color</button>
          </p>

      </div>
      <div id="imgs">

      </div>
  </div>

  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
