<h1><%= @drawing.title %></h1>
<div class="edit-icons">
  <%= link_to 'Back', drawings_path, :class => 'fa fa-arrow-left' %> <%= link_to 'Edit', edit_drawing_path(@drawing), :class => 'fa fa-pencil-square-o' %> <%= link_to 'Delete', drawing_path(@drawing), method: :delete, :class => 'fa fa-trash-o' %> <%= link_to 'Add a Note', new_drawing_note_path(@drawing), :class => 'fa fa-comment' %>
</div>

<div class="space-layout">
  <p>
    <strong>Description:</strong>
    <%= @drawing.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @drawing.location %>
  </p>

  <div class="drawing">
      <canvas width="600" height="320" id="cvs" style="background:url('https://maps.googleapis.com/maps/api/staticmap?center=Brooklyn+Bridge,New+York,NY&zoom=13&size=600x300&maptype=roadmap&markers=color:blue%7Clabel:S%7C40.702147,-74.015794&markers=color:green%7Clabel:G%7C40.711614,-74.012318&markers=color:red%7Clabel:C%7C40.718217,-73.998284&key=AIzaSyCsgW4NffHzS2uNU-OXtGlKTDn9VVtelME') no-repeat; background-size:cover;"></canvas>

      <div>
          <p>
              <button id="save">save</button> or <button id="convert">convert to</button> as:
              <select id="sel">
                  <option value="png">png</option>
                  <option value="jpeg">jpeg</option>
                  <option value="bmp">bmp</option>
              </select><br/>
              width : <input type="number" value="300" id="imgW" /><br/>
              height : <input type="number" value="200" id="imgH" /><br/>
              <input name="color2" type="hidden" id="color_value" value="66ccff">
              <button class="jscolor {valueElement: 'color_value'}">Pick a color</button>
          </p>

      </div>
      <div id="imgs">

      </div>
  </div>

</div>

<% if @drawing.notes.present? %>
    <h2>Notes</h2>
    <% @drawing.notes.each do |note| %>
      <div class="note">
        <p><strong><%= link_to note.title, drawing_note_path(@drawing, note) %></strong></p>
        <p><%= note.body %></p>
      </div>
    <% end %>
<% end %>

  <% if @drawing.comments.present? %>
    <h2>Comments</h2>
    <%= render @drawing.comments %>
  <% end %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
