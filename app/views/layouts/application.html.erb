<!DOCTYPE html>
<html>
  <head>
    <title>MapSketch</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <header>
    <div class="container">
        <h1 id="logo"><%= link_to 'mapsketch', root_path %></h1>
        <nav class="main-nav">
          <% if current_user.try(:admin?) %>
          <%= link_to 'Blocked', '/admin', :class => current_class?('/admin') %>
          <% end %>
          <%= link_to 'Featured', drawings_path, :class => current_class?(drawings_path) %>
          <% if user_signed_in? %>
          <%= link_to 'My Drawings', creates_path, :class => current_class?(creates_path) %>
          <%= link_to favorites_path, title: "Favorites", :class => current_class?(favorites_path)  do %>
            <%= fa_icon 'heart fa-1' %>
          <% end %>
          <div class="dropdown">
            <%= fa_icon 'user-o fa-1', :id => 'profile' %>
            <div class="dropdown-content">
            <%= link_to 'Profile', edit_user_registration_path, :class => current_class?(edit_user_registration_path) %>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
            </div>
          </div>
          <% else %>
          <%= link_to 'Sign up', new_user_registration_path, :class => current_class?(new_user_registration_path)  %>
          <%= link_to 'Login', new_user_session_path, :class => current_class?(new_user_session_path)  %>
          <% end %>
        </nav>
    </div>
    <div class="mobile-icon"><a href="/"><img src="/images/menu.png"></a></div>
      <div class="mobile-menu">
        <nav class="mobile-navigation">
          <% if current_user.try(:admin?) %>
          <%= link_to 'Blocked', '/admin', :class => current_class?('/admin') %>
          <% end %>
          <%= link_to 'Featured', drawings_path, :class => current_class?(drawings_path) %>
          <% if user_signed_in? %>
          <%= link_to 'My Drawings', creates_path, :class => current_class?(creates_path) %>
          <%= link_to 'Profile', '/pages/profile', :class => current_class?('/pages/profile') %>
          <%= link_to 'Favorites', favorites_path, :class => current_class?(favorites_path) %>
          <%= link_to 'Profile', edit_user_registration_path, :class => current_class?(edit_user_registration_path) %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
          <% else %>
          <%= link_to 'Sign up', new_user_registration_path, :class => current_class?(new_user_registration_path)  %>
          <%= link_to 'Login', new_user_session_path, :class => current_class?(new_user_session_path)  %>
          <% end %>
        </nav>
    </div>
  </header>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="container">
      <div class="content">
      <% flash.each do |type, message| %>
        <p class="flash <%= type %>"><%= message %></p>
      <% end %>
      <%= yield %>
      </div>
    </div>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-6877639-11', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
</html>
