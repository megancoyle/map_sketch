<div id="error_explanation">
  <% @note.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
</div>

<%= form_for [@drawing, @note] do |f| %>
  <p>
    <%= f.label :title, 'Title' %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body, 'Note' %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
